#!/usr/bin/env dbagile

# First, we connect a database
connect "sqlite://example.db"

# We use some plugins in the chain
use :FlexibleTable
use :Defaults, {:now => lambda{Time.now}}

# Let insert some tuples in a tools table...
insert :tools, {:name => "dbagile", :version => "0.0.1"}
insert :tools, {:name => "sequel",  :version => "3.8.0"}

# And see the result now!
display :tools