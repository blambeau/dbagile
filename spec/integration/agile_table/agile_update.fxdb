(use AgileTable)

(insert :tools, {:name => "dbagile"})

(assert "The tools table has been created on agile insert",
  (table_exists? :tools))

(update :tools, {:name => "dbagile"}, {:version => DbAgile::VERSION})

(assert "The column for version has been created on update",
  (equal? [{:name => "dbagile", :version => DbAgile::VERSION}],
          (to_a :tools)))