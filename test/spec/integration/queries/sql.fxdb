start_transaction
  # SELECT SQL queries
  (assert "SELECT * FROM suppliers is the same as dataset(:suppliers)",
    (equal? (to_a (dataset :suppliers)),
            (to_a (sql "SELECT * FROM suppliers"))
    ))

  # DELETE SQL queries
  (assert_false (empty? :suppliers))
  (sql "DELETE FROM suppliers")
  (assert "Sending DELETE SQL queries works as well",
    (empty? :suppliers))
  
  # INSERT SQL queries
  (sql "INSERT INTO suppliers ('s#', 'name') VALUES ('S1', 'Clark')")
  (assert_false "Sending INSERT SQL queries works as well",
    (empty? :suppliers))
commit